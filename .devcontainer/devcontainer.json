{
    "name": "picam",
    "features": {
        "ghcr.io/devcontainers-contrib/features/poetry:1": {
            "version": "latest"
        }
    },
    "dockerComposeFile": "docker-compose.devcontainer.yml",
    "service": "picam",
    "workspaceFolder": "/workspaces/picam",
